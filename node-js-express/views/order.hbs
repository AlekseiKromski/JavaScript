<h1>Your orders</h1>
<hr>
<div id="order">
    {{#if orders.length}}
        {{#each orders}}
            <div class="row">
                <div class="col s6 offset-s3">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">
                                Order: <small>{{this._id}}</small>
                            </span>
                            <p>Data: <small id="order-date">{{this.date}}</small></p>
                            <p><em>{{this.user.name}}</em> ({{./this.user.userId.email}})</p>
                            <ol>
                                {{#each this.courses}}
                                    <li>{{this.course.title}} (x<strong>{{this.course.count}}</strong>)</li>
                                {{/each}}
                            </ol>   
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        No data 
    {{/if}}
</div>